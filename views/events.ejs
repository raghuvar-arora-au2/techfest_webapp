	.overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
 
  overflow: hidden;
  width: 100%;
  height: 100%;
  -webkit-transform:scale(0);
  transition: .3s ease;
}

.event1:hover .overlay {
  transform: scale(1)
}
.event1:hover img{
filter:blur(.2px) brightness(60%);
